<div class="w-full md:w-7/12 px-4">
  <div class="contact-page__form">
    <form class="comment-one__form">
      <div class="flex flex-wrap -mx-4">
        <div class="w-full md:w-1/2 px-4">
          <div class="comment-form__input-box">
            <input type="text" placeholder="Nom" id="nom" name="nom" />
          </div>
        </div>
        <div class="w-full md:w-1/2 px-4">
          <div class="comment-form__input-box">
            <input
              type="email"
              placeholder="Adresse email"
              name="email"
              id="email"
            />
          </div>
        </div>
      </div>
      <div class="flex flex-wrap -mx-4">
        <div class="w-full md:w-1/2 px-4">
          <div class="comment-form__input-box">
            <input type="text" placeholder="N° téléphone" name="tel" id="tel" />
          </div>
        </div>
        <div class="w-full md:w-1/2 px-4">
          <div class="comment-form__input-box">
            <input type="email" placeholder="Sujet" name="sujet" id="sujet" />
          </div>
        </div>
      </div>
      <div class="flex flex-wrap -mx-4">
        <div class="w-full px-4">
          <div class="comment-form__input-box">
            <textarea name="message" id="message" placeholder="Votre message"
            ></textarea>
          </div>
          <div id="success01"></div>
          <button
            class="thm-btn comment-form__btn"
            data-text="Envoyer"
            type="button"
            onclick="envoyerContact()">Envoyer</button
          >
        </div>
      </div>
    </form>
  </div>
</div>
