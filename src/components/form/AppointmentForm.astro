---
// No props needed
---

<div class="w-full xl:w-5/12">
  <!-- col-xl-5 -->
  <div class="appointment-one__form">
    <div class="title-box mb-6">
      <h2 class="text-2xl font-semibold">Nous envoyez un message</h2>
    </div>

    <div class="form-box">
      <form method="post" class="space-y-4">
        <div class="form-group">
          <input
            type="text"
            name="nom"
            id="nom02"
            placeholder="Votre nom"
            required
            class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div class="form-group">
          <input
            type="text"
            name="tel"
            id="tel02"
            placeholder="N° téléphone"
            required
            class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div class="form-group">
          <textarea
            placeholder="Message"
            id="message02"
            class="w-full h-32 border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          ></textarea>
        </div>

        <div class="flex flex-wrap -mx-4">
          <!-- row -->
          <div class="w-full px-4">
            <!-- col-xl-12 -->
            <div id="success02"></div>
            <div class="button-box mt-4">
              <button
                class="thm-btn"
                data-text="Envoyer"
                type="button"
                onclick="envoyerFormIndex()"
              >
                Envoyer
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
