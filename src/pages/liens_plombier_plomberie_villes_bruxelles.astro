---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import PageHeader from '../components/header/PageHeader.astro';

// Import SEO-friendly place names for dynamic link generation
import { seoPlaces } from '../data/seo_places';
---

<Layout
  title="Plomberie sanitaire en proximité et/ou en urgence, S-Plomberie"
  description="S-Plomberie est spécialisée dans le dépannage d'urgence en Belgique. Qu'il s'agisse d'un entretien ou d'une réparation, nous mettons à votre disposition nos services de plomberie sanitaire et de débouchage de canalisation"
>
  <!-- Site header component -->
  <Header />

  <!-- Page header with main title -->
  <PageHeader title1="Plomberie sanitaire En proximité et en urgence" />

  <!-- Main content container -->
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-wrap p-3">

      <!-- List of plumber services by location -->
      <div class="w-full xl:w-1/2 service my-12">
        <ul>
          {
            // Loop through seoPlaces to create links dynamically
            Object.entries(seoPlaces).map(([slug, name]) => (
              <li>
                <a href={`/entreprise-plomberie/plombier/${slug}`}>
                  Plombier {name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

    </div>
  </div>
</Layout>
