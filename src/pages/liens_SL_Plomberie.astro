---
import Layout from '../layouts/Layout.astro';

// Import SEO keys for dynamic plumbing service links
import { seo_keys } from '../data/seoPlomberieSLKey';

// Page Header
const header = {
  title1: "Plomberie sanitaire En proximité et en urgence",
  title2: "",
};
// Page Header
---

<Layout
  title="Plomberie en proximité et/ou en urgence S-Plomberie"
  description="S-Plomberie est spécialisée dans le dépannage de plomberie sanitaire d'urgence en Belgique. Qu'il s'agisse d'un entretien ou d'une réparation, nous mettons à votre disposition nos services de plomberie sanitaire."
>


    <!-- Page header with main title -->
  <section class="page-header">
    <div class="page-header__bg" style="background-color: #4683c4;"></div>
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex flex-wrap">
        <div class="w-full">
          <div class="page-header__wrapper">
            <div class="page-header__content">
              <h1 class="text-center">
                {header.title1}<br />{header.title2}
              </h1>
              <div class="text-center">
                <a
                  href="tel:0474565656"
                  class="thm-btn"
                  data-text="Plombier en urgence : 0474 56 56 56"
                >
                  Plombier en urgence: 0474/56.56.56
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Page header with main title -->


  <!-- Main container for content -->
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-wrap p-3">

      <!-- Plumbing services list section -->
      <div class="w-full xl:w-1/2 service my-12">
        <ul>
          {
            // Generate links dynamically from seo_keys data
            Object.entries(seo_keys).map(([slug, name]) => (
              <li>
                <a href={`/service-plomberie/${slug}`}>
                  {name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

    </div>
  </div>

</Layout>
